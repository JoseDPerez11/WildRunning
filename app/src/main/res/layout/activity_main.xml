<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/rlmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:id="@+id/rlTopFixed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <!-- datos actuales de carrera -->
            <LinearLayout
                android:id="@+id/lyCurrentData"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:layout_marginTop="55dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/gray_medium"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rlCurrentDistance"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center|right" >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCurrentDistance"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        android:background="@color/white"
                        android:layout_margin="0dp" >
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbChallengeDistance"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationY="0dp"
                            android:translationZ="10dp"
                            app:cs_circle_color="@color/transparent"
                            app:cs_circle_progress_color="@color/blue_trans"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_circle_style="butt"
                            app:cs_disable_pointer="true"
                            app:cs_end_angle="45"
                            app:cs_max="100"
                            app:cs_negative_enabled="true"
                            app:cs_pointer_angle="0"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_progress="20"
                            app:cs_start_angle="135" />
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbCurrentDistance"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationY="0dp"
                            android:translationZ="5dp"
                            app:cs_circle_color="@color/transparent"
                            app:cs_circle_progress_color="@color/orange"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_circle_style="butt"
                            app:cs_disable_pointer="true"
                            app:cs_end_angle="45"
                            app:cs_max="100"
                            app:cs_negative_enabled="true"
                            app:cs_pointer_angle="0"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_progress="70"
                            app:cs_start_angle="135" />
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbRecordDistance"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationY="0dp"
                            android:translationZ="0dp"
                            app:cs_circle_color="@color/transparent"
                            app:cs_circle_progress_color="@color/gray"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_circle_style="butt"
                            app:cs_disable_pointer="true"
                            app:cs_end_angle="45"
                            app:cs_max="100"
                            app:cs_negative_enabled="true"
                            app:cs_pointer_angle="0"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_progress="100"
                            app:cs_start_angle="135" />
                        <TextView
                            android:id="@+id/tvDistanceLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="DISTANCE"
                            android:textAlignment="center"
                            android:textColor="@color/gray_medium"
                            android:textSize="10sp"
                            android:layout_marginTop="15dp" />
                        <TextView
                            android:id="@+id/tvCurrentDistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="30sp"
                            android:layout_marginTop="30dp" />
                        <TextView
                            android:id="@+id/tvDistanceUX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KMs."
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="12sp"
                            android:layout_marginTop="70dp" />
                        <TextView
                            android:id="@+id/tvDistanceRecord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20.16"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_medium"
                            android:layout_marginRight="26dp"
                            android:textSize="14sp"
                            android:layout_marginTop="93dp"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                
                <RelativeLayout
                    android:id="@+id/rlCurrentAvg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center|right">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCurrentAVGSpeed"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        android:background="@color/white"
                        android:layout_margin="0dp" >
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbCurrentAvgSpeed"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:translationY="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationZ="10dp"
                            app:cs_negative_enabled="true"
                            app:cs_circle_style="butt"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_pointer_angle="0"
                            app:cs_start_angle = "135"
                            app:cs_end_angle = "45"
                            app:cs_progress = "20"
                            app:cs_max = "100"
                            app:cs_circle_color  = "@color/transparent"
                            app:cs_circle_progress_color = "@color/orange"
                            app:cs_disable_pointer="true"/>
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbRecordAvgSpeed"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:translationY="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationZ="5dp"
                            app:cs_negative_enabled="true"
                            app:cs_circle_style="butt"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_pointer_angle="0"
                            app:cs_start_angle = "135"
                            app:cs_end_angle = "45"
                            app:cs_progress = "100"
                            app:cs_max = "100"
                            app:cs_circle_color  = "@color/transparent"
                            app:cs_circle_progress_color = "@color/gray"
                            app:cs_disable_pointer="true"/>
                        
                        <TextView
                            android:id="@+id/tvCurrentAvgSpeedLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="AVG SPEED"
                            android:textAlignment="center"
                            android:textColor="@color/gray_medium"
                            android:textSize="10sp"
                            android:layout_marginTop="15dp" />
                        <TextView
                            android:id="@+id/tvCurrentAvgSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="30sp"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:id="@+id/tvCurrentAvgSpeedUX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KM/H"
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="12sp"
                            android:layout_marginTop="70dp"/>
                        <TextView
                            android:id="@+id/tvAvgSpeedRecord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="13.5"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_medium"
                            android:layout_marginRight="26dp"
                            android:textSize="14sp"
                            android:layout_marginTop="93dp"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCurrentSpeed"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_gravity="center|right" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvCurrentSpeed"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        android:background="@color/white"
                        android:layout_margin="0dp">
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbCurrentSpeed"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:translationY="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationZ="15dp"
                            app:cs_negative_enabled="true"
                            app:cs_circle_style="butt"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_pointer_angle="0"
                            app:cs_start_angle = "135"
                            app:cs_end_angle = "45"
                            app:cs_progress = "20"
                            app:cs_max = "100"
                            app:cs_circle_color  = "@color/transparent"
                            app:cs_circle_progress_color = "@color/orange"
                            app:cs_disable_pointer="true"/>
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbCurrentMaxSpeed"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:translationY="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationZ="10dp"
                            app:cs_negative_enabled="true"
                            app:cs_circle_style="butt"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_pointer_angle="0"
                            app:cs_start_angle = "135"
                            app:cs_end_angle = "45"
                            app:cs_progress = "70"
                            app:cs_max = "100"
                            app:cs_circle_color  = "@color/transparent"
                            app:cs_circle_progress_color = "@color/salmon_dark"
                            app:cs_disable_pointer="true"/>
                        <me.tankery.lib.circularseekbar.CircularSeekBar
                            android:id="@+id/csbRecordSpeed"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:translationY="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:translationZ="5dp"
                            app:cs_negative_enabled="true"
                            app:cs_circle_style="butt"
                            app:cs_circle_stroke_width="8dp"
                            app:cs_pointer_stroke_width="8dp"
                            app:cs_pointer_angle="0"
                            app:cs_start_angle = "135"
                            app:cs_end_angle = "45"
                            app:cs_progress = "100"
                            app:cs_max = "100"
                            app:cs_circle_color  = "@color/transparent"
                            app:cs_circle_progress_color = "@color/gray"
                            app:cs_disable_pointer="true"/>

                        <TextView
                            android:id="@+id/tvSpeedLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SPEED"
                            android:textAlignment="center"
                            android:textColor="@color/gray_medium"
                            android:textSize="10sp"
                            android:layout_marginTop="15dp"/>
                        <TextView
                            android:id="@+id/tvCurrentSpeed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="30sp"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:id="@+id/tvSpeedUX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KM/H"
                            android:textAlignment="center"
                            android:textColor="@color/gray_dark"
                            android:textSize="12sp"
                            android:layout_marginTop="70dp"/>
                        <TextView
                            android:id="@+id/tvMaxSpeedRecord"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16.3"
                            android:textAlignment="textEnd"
                            android:textColor="@color/gray_medium"
                            android:layout_marginRight="26dp"
                            android:textSize="14sp"
                            android:layout_marginTop="93dp"/>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>

            <!-- chrono y rounds con los "progressbar" simulados con linearlayouts -->
            <RelativeLayout
                android:id="@+id/lyChrono"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:orientation="horizontal"
                android:layout_marginTop="198dp"
                android:gravity="top"
                android:background="@color/gray_dark">

                <LinearLayout
                    android:id="@+id/lyChronoProgressBg"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:orientation="horizontal"
                    android:background="@color/orange" />
                <LinearLayout
                    android:id="@+id/lyRoundProgressBg"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:orientation="horizontal"
                    android:background="@color/salmon_dark"
                    android:translationY="77dp"
                    android:translationX="0dp"/>
                <LinearLayout
                    android:id="@+id/lyChronoRound"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/tvChrono"
                        android:layout_width="210dp"
                        android:layout_height="77dp"
                        android:text="@string/init_stop_watch_value"
                        android:textColor="@color/white"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvRounds"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/gray_dark"
                        android:textSize="24sp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="287dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/gray_dark"
                android:paddingBottom="60dp"
                android:gravity="center">

                <!-- map -->
                <LinearLayout
                    android:id="@+id/lyMapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:translationY="0dp"
                    android:background="@color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyMap"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:gravity="left"
                        android:translationY="0dp"
                        android:background="@color/transparent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/lyFragmentMap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:translationY="300dp"
                            android:gravity="left"
                            android:orientation="vertical">

                            <!--
                            <fragment
                                android:id="@+id/fragmentMap"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="420dp"
                                tools:context=".MainActivity"
                                map:mapType="normal"
                                map:uiCompass="false"
                                map:uiRotateGestures="true"
                                map:uiScrollGestures="true"
                                map:uiTiltGestures="true"
                                map:uiZoomControls="true"
                                map:uiZoomGestures="true"/>
                            -->
                            <TextView
                                android:id="@+id/tvMapCenter"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:text="CENTRAR"
                                android:paddingBottom="10dp"
                                android:textSize="16sp"
                                android:translationZ="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="15dp"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/centermap_icon"
                                android:paddingRight="20dp"
                                android:layout_marginLeft="5dp"
                                android:translationY="-57dp"
                                android:background="@color/blue"
                                android:textColor="@color/white"
                                android:onClick="callCenterMap" />

                            <ImageView
                                android:id="@+id/ivTypeMap"
                                android:layout_width="55dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="-470dp"
                                android:src="@drawable/map_type_normal"
                                android:translationZ="10dp"
                                android:onClick="changeTypeMap"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyOpenerMap"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:translationZ="15dp"
                        android:gravity="left"
                        android:background="@color/transparent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/lyOpenerLine"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/white"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/lyOpenerButton"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:translationY="-5dp"
                            android:orientation="horizontal"
                            android:onClick="callShowHideMap">
                            <LinearLayout
                                android:id="@+id/lyOpenStart"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:translationY="-30dp"
                                android:layout_marginLeft="6dp"
                                android:rotation="45"
                                android:background="@color/white"
                                android:orientation="vertical" />
                            <LinearLayout
                                android:id="@+id/lyOpenerTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:layout_marginLeft="-25dp"
                                android:background="@color/white"
                                android:orientation="horizontal"
                                android:translationZ="15dp" >

                                <ImageView
                                    android:id="@+id/ivMapIcon"
                                    android:layout_width="12dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/map_icon" />
                                <TextView
                                    android:id="@+id/tvMapTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="MAPA"
                                    android:layout_marginLeft="5dp"
                                    android:textAlignment="center"
                                    android:background="@color/gray_dark"
                                    android:textSize="14sp" />
                                <ImageView
                                    android:id="@+id/ivOpenClose"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/opener_icon_dark"
                                    android:rotation="0"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lyOpenEnd"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:translationY="-30dp"
                                android:layout_marginLeft="30dp"
                                android:rotation="45"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:translationZ="0dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- start, camara, sports, map -->
                <LinearLayout
                    android:id="@+id/rlStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_gravity="top|center"
                    android:gravity="top|center"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical"
                    android:background="@color/gray_dark" >

                    <!-- boton de start y camara -->
                    <RelativeLayout
                        android:id="@+id/rlStartCamara"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:gravity="center|center"
                        android:translationZ="10dp" >
                        
                        <LinearLayout
                            android:id="@+id/btStart"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:gravity="center|center"
                            android:layout_centerInParent="true"
                            android:background="@drawable/circle_background_toplay"
                            android:enabled="false"
                            android:onClick="startOrStopButtonClicked"
                            android:textColor="@color/white" >

                            <TextView
                                android:id="@+id/btStartLabel"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:gravity="center"
                                android:text="@string/start"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:translationY="-5dp" />
                        </LinearLayout>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fbCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_menu_camera"
                            app:maxImageSize="40dp"
                            android:translationZ="12dp"
                            android:translationX="75dp"
                            android:onClick="takePicture" />

                    </RelativeLayout>

                    <!-- sports -->
                    <LinearLayout
                        android:id="@+id/lySports"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:background="@color/gray_dark"
                        android:gravity="center">


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:enabled="true"
            android:text=""
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:translationY="150dp"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center|bottom"/>

    </RelativeLayout>



    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <com.google.android.material.navigation.NavigationView
